{
  "name": "white-rabbit",
  "version": "0.1.0",
  "license": "MIT",
  "packageManager": "yarn@4.5.0",
  "engines": {
    "yarn": ">=4",
    "node": ">=20"
  },
  "workspaces": [
    "packages/frontend-core",
    "packages/app-tauri",
    "packages/app-electron"
  ],
  "scripts": {
    "postinstall": "husky",
    "build": "cargo build --release && yarn workspaces foreach --from 'packages/*' -Rpitv run build",
    "lint:rs": "cargo fmt --check && cargo clippy",
    "lint:fix:rs": "cargo sort -w && cargo fmt && cargo clippy --fix --allow-dirty --allow-staged",
    "lint:stylelint": "stylelint '**/*.{vue,scss,css}' --ignore-path .prettierignore",
    "lint:fix:stylelint": "yarn lint:stylelint --fix",
    "lint:base:prettier": "prettier '**/*.{vue,ts,js,mjs,json}'",
    "lint:prettier": "yarn lint:base:prettier --check",
    "lint:fix:prettier": "yarn lint:base:prettier --write",
    "lint:fix": "yarn lint:fix:prettier && yarn lint:fix:stylelint && yarn lint:fix:rs && yarn workspaces foreach --from 'packages/*' -Rpitv run lint:fix",
    "lint": "yarn lint:prettier && yarn lint:stylelint && yarn lint:rs && yarn workspaces foreach --from 'packages/*' -Rpitv run lint",
    "upgrade": "yarn upgrade-interactive && cargo update && cargo upgrade --incompatible --pinned",
    "test": "cargo test",
    "test:coverage": "rimraf target/debug/coverage; yarn test:coverage:test && yarn test:coverage:generate -t html -o target/debug/coverage/ && yarn test:coverage:generate -t lcov -o target/debug/coverage/lcov.info",
    "test:coverage:test": "CARGO_INCREMENTAL='0' RUSTDOCFLAGS='-Zprofile -Ccodegen-units=1 -Cinline-threshold=0 -Clink-dead-code -Coverflow-checks=off -Cpanic=abort -Zpanic_abort_tests' RUSTFLAGS='-Zprofile -Ccodegen-units=1 -Cinline-threshold=0 -Clink-dead-code -Coverflow-checks=off -Cpanic=abort -Zpanic_abort_tests' cargo +nightly test",
    "test:coverage:generate": "grcov . -s . --binary-path ./target/debug/ --branch --keep-only 'packages/*'"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.11.1",
    "@intlify/unplugin-vue-i18n": "^6.0.0",
    "@quasar/vite-plugin": "^1.7.0",
    "@types/eslint": "^9.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.9",
    "@types/node": "^22.6.1",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitest/coverage-v8": "^2.1.1",
    "@vue/compiler-dom": "^3.5.8",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "commitizen": "^4.3.0",
    "commitlint": "^19.5.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.28.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "markdownlint-cli": "^0.42.0",
    "postcss": "^8.4.47",
    "postcss-html": "^1.7.0",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.79.3",
    "sass-loader": "^16.0.2",
    "stylelint": "^16.9.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.7",
    "vitest": "^2.1.1",
    "vue": "^3.5.8",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
